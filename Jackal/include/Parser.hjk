#INCLUDE "<inc>/Lexer.hjk"

EXTERN FN PrsProgram ()

EXTERN FN PrsInitialize ()

ENUM PrsAstType : UBYTE
    AST_IDENTIFIER,
    AST_ASSIGN,
    AST_OPERATOR,
    AST_CONSTANT,
    AST_STRING,
    AST_PRIM_VALUE,
    AST_INITIALIZER,
    AST_STATEMENT,
    AST_WHILE,
END

STRUCT PrsBlock
    StatementListHead : ^PrsAstNode,
    StatementListTail : ^PrsAstNode,
    StatementCount : ULONG,
END

STRUCT PrsAstAssign
    Left : ^PrsAstNode,
    Right : ^PrsAstNode,
END

STRUCT PrsAstOperator
    Left : ^PrsAstNode,
    Right : ^PrsAstNode,
    OperatorSpecific : ^VOID,
END

STRUCT PrsAstConstant
    Value : TlMachineWord,
END

STRUCT PrsAstStatement
    StatementSpecific : ^VOID,
END

STRUCT PrsAstWhile
    Conditional : ^PrsAstNode,
    BodyBlock : ^PrsBlock,
END

UNION PrsAstBody
    Assign : PrsAstAssign,
    Operator : PrsAstOperator,
    Constant : PrsAstConstant,
    Statement : PrsAstStatement,
    While : PrsAstWhile,
END

STRUCT PrsAstNode
    Token : LexToken,

    Next : ^PrsAstNode,

    Type : PrsAstType,
    Body : PrsAstBody,
END