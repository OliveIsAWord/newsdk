TARGET "XrAsm"
	#IF ( STRCMP PLATFORM "fox32os" )
		FILE "<bld>/xrasm.fxf"
	#ELSE
		FILE "<bld>/xrasm.exe"
	#END
	
	INCDIR "../Library/include"
	SOURCES "../Library"

	INCDIR "./include"
	SOURCES "./Frontend"

	SOURCES "./xr17032"
	SOURCES "./fox32"

	#IF ( STRCMP ARCHITECTURE "CHost" )
		SOURCES "./Frontend/CHost"
		SOURCES "../Library/CHost"
	#END

	#IF ( STRCMP PLATFORM "fox32os" )
		SOURCES "./Frontend/fox32os"
		SOURCES "../Library/fox32os"

		LINKOPT "-fxf"
	#END
END