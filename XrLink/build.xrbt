TARGET "XrLink"
	#IF ( STRCMP PLATFORM "fox32os" )
		FILE "<bld>/xrlink.fxf"
	#ELSE
		FILE "<bld>/xrlink.exe"
	#END
	
	INCDIR "../Library/include"
	SOURCES "../Library"

	INCDIR "./include"
	SOURCES "./Linker"

	#IF ( STRCMP ARCHITECTURE "CHost" )
		SOURCES "./Linker/CHost"
		SOURCES "../Library/CHost"
	#END

	#IF ( STRCMP PLATFORM "fox32os" )
		SOURCES "./Linker/fox32os"
		SOURCES "../Library/fox32os"

		LINKOPT "-fxf"
	#END
END